<div class="text-center relative w-3/5">
    <div class=" top-0 h-14"></div>
    <div class="row mx-auto d-flex align-items-center min-vh-100"></div>
</div>

<button id="logout" onclick="document.location.replace('/login')"
    class="btn justify-items-end rounded-sm border-white-700 border bg-orange-300 text-blue-700 hover:text-white hover:bg-blue-800 focus:outline-none focus:ring-blue-300 text-center text-xl border-4">logout</button>

<button type="submit" id="back-to-pet" onclick="document.location.replace('/pets')"
    class="btn justify-items-end rounded-sm border-white-700 border bg-orange-300 text-blue-700 hover:text-white hover:bg-blue-800 focus:outline-none focus:ring-blue-300 text-center text-xl border-4">Back to previous page</button>

<div class=" grid grid-cols-2 gap-2 flex-row pr-2 p-3">
    <div class=" flex-row rounded-md h-50 mx-3 my-5 right-5">
        <img src="/images/{{petData.filename}}" alt="{{petData.filename}}" class="rounded-md" pet-id="{{petData.id}}" />

    </div>
    <div>
        <div class=" h-12"> </div>
        <div class="h-32 body-container bg-green-100">

            <p id="Name">Name : {{petData.name}}</p>
            <p id="Name">Breed: {{petData.breed}}</p>
            <p id="Name">Type : {{petData.type}}</p>
            <p id="Name">Age : {{petData.age}} year(s) old</p>
            <p id="Name">Description: {{petData.description}}</p>
        </div>
        <br><br><br><br>
    </div>
</div>

<script type="text/javascript" src="/js/pet.js"></script>