<div class="text-center relative w-3/5">
    <div class="top-0 h-14"></div>
    <div class="row mx-auto d-flex align-items-center min-vh-100"></div>

</div>
{{#if logged_in}}
<button id="logout" onclick="document.location.replace('/login')"
    class="btn justify-items-end rounded-sm border-white-700 border bg-white text-blue-700 hover:text-white hover:bg-blue-800 focus:outline-none focus:ring-blue-300 text-center text-xl border-4">logout</button>
{{/if}}
<button id="addpet-btn" type="submit" onclick="document.location.replace('/addpet')"
    class="btn rounded-sm bg-orange-300 border-blue-700 border text-blue-700 hover:text-white hover:bg-blue-800 focus:outline-none focus:ring-blue-300 text-center">Add a pet</button>

<div class=" grid grid-cols-4 gap-2 flex-row pr-2 p-3">
    {{#each petData}}
    <div class=" flex-row rounded-md h-50 mx-3 my-5 right-5">
        <a href = "/pets/{{id}}"><img src="/images/{{filename}}" alt="{{filename}}" class="rounded-md" id="petid" onclick="getpetdetail('{{id}}')"/>
        <h1 class="btn justify-items-end rounded-sm border-white-700 border bg-white text-blue-700 hover:text-white hover:bg-blue-800 focus:outline-none focus:ring-blue-300 text-center text-xl border-4">{{name}}</h1>
        </a>
    </div>

    {{/each}}

</div>